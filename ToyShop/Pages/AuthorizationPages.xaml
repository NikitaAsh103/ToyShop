<Page x:Class="ToyShop.Pages.AuthorizationPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToyShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="600"
      Title="AuthorizationPages">

    <Grid Background="#FFE6C2CE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="1"
              Grid.ColumnSpan="3"
              Grid.Row="1"
              Grid.RowSpan="4" 
              Background="#FFCAABC8" 
                BorderBrush="Black"
                BorderThickness="2"
                
              
              />
        <Border Grid.Column="1"
              Grid.ColumnSpan="3"
              Grid.Row="1" 
              Background="#FFB7B7B7" 
                BorderBrush="Black"
                BorderThickness="2"
              />

        <TextBlock
            Text="Авторизация"
            FontSize="50"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" 
            Foreground="#FF383838" FontWeight="Bold"/>

        <Button x:Name="BtnRegistration" Style="{StaticResource BtnStyle }" 
                Grid.ColumnSpan="2"
                Width="220"
                VerticalAlignment="Center"
                Content="Зарегистрироваться" 
                Grid.Row="4" 
                HorizontalAlignment="Left"
                Grid.Column="1" Click="BtnRegistration_Click" 
                />

        <Button x:Name="BtnEnter" 
                Style="{StaticResource BtnStyle }" 
                Grid.Column="2"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Right"
                Width="120"
                VerticalAlignment="Center"
                Content="Войти" 
                Grid.Row="4" 
                Click="BtnEnter_Click" 
                
                
                />

        <TextBox x:Name="TbLogin"
            Style="{StaticResource tbStyle }" 
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="2"
            Width="250"
            VerticalAlignment="Bottom"
            Margin="0 0 0 15"
            Text=" Логин" 
            FontSize="36"
            TextAlignment="Left" 
            GotFocus="TbLogin_GotFocus" LostFocus="TbLogin_LostFocus"
            />

        <TextBox x:Name="TbPassword"
            Style="{StaticResource tbStyle }" 
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="3"
            Width="250"
            VerticalAlignment="Center"
            Margin="0 0 0 15"
            Text=" Пароль" 
            FontSize="36" GotFocus="TbPassword_GotFocus" LostFocus="TbPassword_LostFocus"
            
              
            
            />
        <Image Source="C:\Users\xeek1\source\repos\ToyShop\ToyShop\res\Логотип магазина.png"
               Grid.ColumnSpan="5"
                />










    </Grid>
</Page>
